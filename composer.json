{
  "name": "toniruiz/horti-cat-api",
  "description": "API para huerto urbano usando Slim Framework, con Guzzle, Monolog, Dotenv, Eloquent ORM y documentaciÃ³n OpenAPI.",
  "type": "project",
  "require": {
    "php": ">=8.2",
    "firebase/php-jwt": "^6.11",
    "guzzlehttp/guzzle": "^7.0",
    "illuminate/database": "^9.0",
    "monolog/monolog": "^2.0",
    "php-di/slim-bridge": "^3.4",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.10",
    "vlucas/phpdotenv": "^5.5",
    "zircote/swagger-php": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit"
  },
  "config": {
    "vendor-dir": "./vendor",
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
